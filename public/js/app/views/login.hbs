<style type="text/css">
  body {
    padding-top: 20px;
    padding-bottom: 40px;
  }

  /* Custom container */
  .container-narrow {
    margin: 0 auto;
    max-width: 700px;
  }
  .container-narrow > hr {
    margin: 30px 0;
  }

  .form-signin, .form-signup {
    padding: 19px 29px 29px;
    background-color: #fff;
    border: 1px solid #e5e5e5;
    -webkit-border-radius: 5px;
       -moz-border-radius: 5px;
            border-radius: 5px;
    -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
       -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
  }
  .form-signin .form-signin-heading, .form-signup .form-signup-heading
  .form-signin .checkbox, .form-signup .checkbox {
    margin-bottom: 10px;
  }
  .form-signin input[type="text"],
  .form-signup input[type="text"],
  .form-signin input[type="password"],
  .form-signup input[type="password"] {
    font-size: 16px;
    height: auto;
    margin-bottom: 15px;
    padding: 7px 9px;
  }

</style>

<div class="container-narrow">

  <div class="masthead">
    <ul class="nav nav-pills pull-right">
      <li class="avatar-mini"><a href="#/login"><i class="icon-user"></i></a></li>
      <li><a href="#/login" class="avatar-name">Login</a></li>
      <li><a href="#/index">Home</a></li>
      <!--<li><a href="#/contact">Contact</a></li>-->
    </ul>
    <a href="#/index"><h3 class="muted">Project Name</h3></a>
  </div>

  <hr>
  <div>
    <div class="row-fluid">
      <div class="span6">
        <form class="form-signup">
          <h2 class="form-signup-heading">Sign Up</h2>
          <div id="signup-alert" class="alert alert-error hide">
            <strong>Username/password</strong> invalid.
          </div>
          <input type="text" name="username" class="input-block-level" placeholder="Email address">
          <input type="password" name="password" class="input-block-level" placeholder="Password">
          <button id="signup-btn" class="btn btn-large btn-primary" type="button">Sign up</button>
        </form>
      </div>
      <div class="span6">
        <form class="form-signin">
          <h2 class="form-signin-heading">Sign In</h2>
          <div id="signin-alert" class="alert alert-error hide">
            <strong>Username/password</strong> invalid.
          </div>
          <input type="text" name="username" class="input-block-level" placeholder="Email address">
          <input type="password" name="password" class="input-block-level" placeholder="Password">
          <button id="signin-btn" class="btn btn-large btn-success" type="button">Sign in</button>
        </form>
        </div>
      </div>
    </div>
  </div> <!-- /container -->
</div>


<!-- Project Name -->
<script type="text/javascript">
//For When User Connected
App.controller.user.connected(App.controller.login.renderUserInfo);

//For When User Disconnected
App.controller.user.disconnected(App.controller.login.renderUserDisconnected);

//For Signup
$("#signup-btn").click(App.controller.login.signup);

//For Signin
$("#signin-btn").click(App.controller.login.signin);
</script>